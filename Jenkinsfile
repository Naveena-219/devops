pipeline {
  agent any
  stages {
    stage('stage1') {
      steps {
        sh '''valhost=$(hostname -i) '''
       
      }
    }
     stage('stage2') {
      steps {
        sh '''memory=$(free) '''
       
      }
    }
     stage('stage3') {
      steps {
        sh '''version=$(cat /etc/os-release) '''
       
      }
    }
    
  }
}
